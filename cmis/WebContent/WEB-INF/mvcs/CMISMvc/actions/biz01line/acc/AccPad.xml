<?xml version="1.0" encoding="UTF-8"?>
<actionDefines>
	<classMap>
		<map id="action" class="com.yucheng.cmis.ad.mvc.ADRequestController"/>
		<map id="flowInvoker" class="com.yucheng.cmis.ad.mvc.ADFlowInvoker"/>
		<map id="outputViews" class="java.util.HashMap"/>
		<map id="output" class="com.ecc.emp.data.KeyedCollection"/>
		<map id="kColl" class="com.ecc.emp.data.KeyedCollection"/>
		<map id="iColl" class="com.ecc.emp.data.IndexedCollection"/>
		<map id="field" class="com.ecc.emp.data.DataField"/>
	</classMap>
	
	<!-- 获取操作主页面 -->
	<action id="queryAccPadList" type="normal" checkSession="true" >
		<flowInvoker>
			<operation class="com.yucheng.cmis.biz01line.acc.op.accpad.QueryAccPadListOp"/>
			<transition dest="retPage"/>
		</flowInvoker>
		<outputViews>
			<jspView id="retPage" url="biz01line/acc/AccPad/queryAccPadList.jsp" />
		</outputViews>
	</action>
	
	<!-- 获得编辑页面 -->
	<action id="getAccPadUpdatePage" type="normal" checkSession="true" >
		<flowInvoker>
			<operation updateCheck="false" class="com.yucheng.cmis.biz01line.acc.op.accpad.QueryAccPadDetailOp"/>
			<transition dest="retPage"/>
		</flowInvoker>
		<outputViews>
			<jspView id="retPage" url="biz01line/acc/AccPad/updateAccPadRecord.jsp" />
		</outputViews>
	</action>
	
	<!-- 更新记录 -->
	<action id="updateAccPadRecord" type="normal" checkSession="true" >
		<flowInvoker>
			<operation class="com.yucheng.cmis.biz01line.acc.op.accpad.UpdateAccPadRecordOp"/>
			<transition dest="retPage"/>
		</flowInvoker>
		<outputViews>
			<jspView id="retPage" url="operationResult.jsp?url=queryAccPadList.do" />
		</outputViews>
	</action>
	
	<!-- 获得查看页面 -->
	<action id="getAccPadViewPage" type="normal" checkSession="true" >
		<flowInvoker>
			<operation class="com.yucheng.cmis.biz01line.acc.op.accpad.QueryAccPadDetailOp"/>
			<transition dest="updatePage"/>
		</flowInvoker>
		<outputViews>
			<jspView id="updatePage" url="biz01line/acc/AccPad/queryAccPadDetail.jsp" />
		</outputViews>
	</action>
	
	<!-- 获得新增页面 -->
	<action id="getAccPadAddPage" type="normal" checkSession="true" >
		<jspView id="addPage" url="biz01line/acc/AccPad/addAccPadRecord.jsp"/>
	</action>
	
	<!-- 新增记录 -->
	<action id="addAccPadRecord" type="normal" checkSession="true" >
		<flowInvoker>
			<operation class="com.yucheng.cmis.biz01line.acc.op.accpad.AddAccPadRecordOp"/>
			<transition dest="retPage"/>
		</flowInvoker>
		<outputViews>
			<jspView id="retPage" url="operationResult.jsp?url=queryAccPadList.do" />
		</outputViews>
	</action>	
	
	<!-- 删除记录 -->
	<action id="deleteAccPadRecord" type="normal" checkSession="true" >
		<flowInvoker>
			<operation class="com.yucheng.cmis.biz01line.acc.op.accpad.DeleteAccPadRecordOp"/>
			<transition dest="retPage"/>
		</flowInvoker>
		<outputViews>
			<jspView id="retPage" url="operationResult.jsp?url=queryAccPadList.do" />
		</outputViews>
	</action>
	
	<!-- 分页查询记录列表 -->
		<action id="pageAccPadQuery" type="normal" checkSession="true" >
		<flowInvoker>
			<operation class="com.yucheng.cmis.biz01line.acc.op.accpad.QueryAccPadListOp"/>
			<transition dest="queryListRes"/>
		</flowInvoker>
		<outputViews>
			<jsonView class="com.yucheng.cmis.view.JSONView" id="queryListRes">
				<output>
					<iColl id="AccPadList">
						<kColl>
						</kColl>
					</iColl>
					<kColl id="pageInfo">
						<field id="currentPage" />
						<field id="maxLine" />
						<field id="recordSize" />
					</kColl>
				</output>
			</jsonView>
		</outputViews>
	</action>
	
		<!-- 导出成生成excel -->                                                                                                                                     
	<action id="accPadExpBatchToExcel" type="normal" checkSession="true" >                                                                                           
		<flowInvoker>                                                                                                                                            
			<operation class="com.yucheng.cmis.biz01line.acc.op.accpad.AccPadExpBatchToExcelOp"/>                                                                    
			<transition dest="retPage"/>                                                                                                                           
		</flowInvoker>                                                                                                                                           
		<outputViews>                                                                                                                                            
		   <view id="retPage" class="com.yucheng.cmis.view.ExcelView">                                                                                           
 				<excelWorkbook fileName="AccPad.xls" class="com.yucheng.cmis.view.excel.ExcelWorkbook">                                                          
 					<excelSheet id="1" name="银承台账" isTitle="true" iCollName="AccPadList" class="com.yucheng.cmis.view.excel.ExcelSheet">                       
 						<!-- 添加合同编号、客户条线 字段    2014-08-07   邓亚辉   -->
 						<excelColumn dataName="bill_no" name="借据编号" cellType="string" class="com.yucheng.cmis.view.excel.ExcelColumn"/>   
 						<excelColumn dataName="cont_no" name="合同编号" cellType="string" class="com.yucheng.cmis.view.excel.ExcelColumn"/>                              
 						<excelColumn dataName="cus_id" name="客户码" class="com.yucheng.cmis.view.excel.ExcelColumn"/>      
 						<excelColumn dataName="cus_id_displayname" name="客户名称"  class="com.yucheng.cmis.view.excel.ExcelColumn"/> 
 						<excelColumn dataName="belg_line" name="客户条线" dictName="STD_ZB_BUSILINE" class="com.yucheng.cmis.view.excel.ExcelColumn"/>  
 						<excelColumn dataName="pad_type" name="垫款种类" dictName="STD_ZB_PAD_TYPE" class="com.yucheng.cmis.view.excel.ExcelColumn"/>                                       
 						<excelColumn dataName="pad_cur_type" name="币种" dictName="STD_ZX_CUR_TYPE" class="com.yucheng.cmis.view.excel.ExcelColumn"/>                          
 						<excelColumn dataName="pad_amt" name="垫款金额" cellType='numeric' class="com.yucheng.cmis.view.excel.ExcelColumn"/>                  
 						<excelColumn dataName="pad_bal" name="垫款余额" cellType='numeric' class="com.yucheng.cmis.view.excel.ExcelColumn"/>      
 						<excelColumn dataName="five_class"  name="五级分类"  dictName="STD_ZB_FIVE_SORT" class="com.yucheng.cmis.view.excel.ExcelColumn"/> 
 						<excelColumn dataName="manager_br_id_displayname"  name="管理机构" class="com.yucheng.cmis.view.excel.ExcelColumn"/>                                      
 					 	<excelColumn dataName="accp_status" name="台账状态" dictName="STD_ZB_ACC_TYPE" class="com.yucheng.cmis.view.excel.ExcelColumn"/>               
 					</excelSheet>                                                                                                                                      
 				</excelWorkbook>                                                                                                                                     
 			</view>                                                                                                                                                
		</outputViews>                                                                                                                                           
	</action>    
	
</actionDefines>



