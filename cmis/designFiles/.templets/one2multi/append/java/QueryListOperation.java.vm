import com.ecc.emp.dbmodel.service.TableModelDAO;
import com.yucheng.cmis.operation.CMISOperation;

public class Query${TableModel.primaryTableName}${tableModelName}ListOp extends CMISOperation {
	
	private final String modelId = "${tableModelName}";
	
	public String doExecute(Context context) throws EMPException {
		Connection connection = null;
		try{
			connection = this.getConnection(context);
#set($relatedField=${TableModel.relatedField})
			String ${relatedField}_value = (String)context.getDataValue("${TableModel.primaryTableName}.${TableModel.primaryRelatedField}");
			
			if(${relatedField}_value==null){
				throw new EMPException("parent primary key not found!");
			}
			
#set($fieldWra=${TableModel.getFieldById("${relatedField}")})
			
			String conditionStr = "where ${fieldWra.columnName} = '" + ${relatedField}_value+"' ${TableModel.orderString}";
			
#if(${query}==true)

			RecordRestrict recordRestrict = this.getRecordRestrict(context);
			conditionStr = recordRestrict.judgeQueryRestrict(this.modelId, conditionStr, context, connection);
#end
#if(${isPaged}==true)	
		int size = ${TableModel.pageSize};

		PageInfo pageInfo = TableModelUtil.createPageInfo(context, "one", String.valueOf(size));
		
		TableModelDAO dao = (TableModelDAO)this.getTableModelDAO(context);
		
#if(${filterSize}>0)
		List list = new ArrayList();
#foreach(${filter} in ${TableModel.filterFields})
		list.add("${filter}");
#end
#foreach(${pkWra} in ${TableModel.getPKOutFilter()})
		list.add("${pkWra.id}");
#end
		IndexedCollection iColl = dao.queryList(modelId,list ,conditionStr,pageInfo,connection);
#else
		IndexedCollection iColl = dao.queryList(modelId, null,conditionStr,pageInfo,connection);
#end
		iColl.setName(iColl.getName()+"List");
		this.putDataElement2Context(iColl, context);
		TableModelUtil.parsePageInfo(context, pageInfo);

#else
		TableModelDAO dao = (TableModelDAO)this.getTableModelDAO(context);
#if(${filterSize}>0)
		List list = new ArrayList();
#foreach(${filter} in ${TableModel.filterFields})
		list.add("${filter}");
#end
#foreach(${pkWra} in ${TableModel.getPKOutFilter()})
		list.add("${pkWra.id}");
#end
		IndexedCollection iColl = dao.queryList(modelId,list,conditionStr,connection);
		iColl.setName(iColl.getName()+"List");
		this.putDataElement2Context(iColl, context);
#else
		IndexedCollection iColl = dao.queryList(modelId, null,conditionStr,connection);
		iColl.setName(iColl.getName()+"List");
		this.putDataElement2Context(iColl, context);	
#end
#end	
		}catch (EMPException ee) {
			throw ee;
		} catch(Exception e){
			throw new EMPException(e);
		} finally {
			if (connection != null)
				this.releaseConnection(context, connection);
		}
		return "0";
	}
}
